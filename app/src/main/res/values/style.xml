<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="myNavigationDrawerStyle">
        <item name="android:textSize">15dp</item>
    </style>

    <declare-styleable name="ToggleView">
        <attr name="positiveImgId" format="reference" />
        <attr name="reverseImgId" format="reference" />
    </declare-styleable>

    <style name="AppBar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="selectableItemBackground">@null</item>
    </style>

    <style name="myPb" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/bg_pb</item>
        <item name="minHeight">1dp</item>
        <item name="maxHeight">1dp</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowDisablePreview">true</item>
    </style>
</resources>